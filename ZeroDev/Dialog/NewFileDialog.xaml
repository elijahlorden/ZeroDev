<Window x:Class="ZeroDev.Dialog.NewFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroDev.Dialog"
        mc:Ignorable="d"
        Title="New File" Height="120" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="FileNameBox" Grid.Row="1" Grid.ColumnSpan="4" Grid.Column="1"/>
        <Button Name="CreateButton" Content="Create" Grid.Row="2" Grid.ColumnSpan="3" Width="100" Height="20"/>
        <Button Name="CancelButton" Content="Cancel" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Width="100" Height="20"/>
    </Grid>
</Window>
